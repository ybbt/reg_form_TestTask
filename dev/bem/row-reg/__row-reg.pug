include ../../bem/tooltip-reg/__tooltip-reg.pug

mixin rowReg(rowTitle, inputFlag, inputType, jsClass, jsClassId)
	.row-reg
		div.row-reg_title= rowTitle
		if (inputFlag== true)
			input.row-reg_input(type=inputType, class=jsClass, class="_input"+jsClassId)
		else
			select.row-reg_input(name=rowTitle, class=jsClass, class="_input"+jsClassId)
				- for (var i = 1950; i<=2020; i++)
					option(value=i)= i
		.row-reg_tooltip.row-reg_tooltip__invis._rowTooltip
			+tooltipReg("Lorem ipsum", jsClassId)
